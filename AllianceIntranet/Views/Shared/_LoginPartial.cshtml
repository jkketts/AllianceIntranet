@using Microsoft.AspNetCore.Identity
@using AllianceIntranet.Models

@inject UserManager<AppUser> UserManager

@{AppUser user = await UserManager.GetUserAsync(User); string firstName = user.FirstName; var id = await UserManager.GetUserIdAsync(user); }
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-controller="Account" asp-action="Detail" asp-route-id="@id" class="btn btn-link navbar-btn navbar-link" title="Manage">Hello @firstName</a>
        </li>
        <li>
            <button asp-controller="Account" asp-action="Logout" type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </li>
    </ul>
</form>