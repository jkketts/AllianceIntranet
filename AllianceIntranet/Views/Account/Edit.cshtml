@model EditViewModel
<!-- Remove password, should be auto set as "A!!iance"; Add Office; Add Role -->

<div class="container">
    <h1 class="mt-3">Register</h1>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" value="@Model.FirstName" name="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" value="@Model.LastName" name="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" value="@Model.Email" name="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Office</label>
            <input class="form-control" value="@Model.Office" name="Office" />
            <span asp-validation-for="Office" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" value="@Model.Password" name="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

