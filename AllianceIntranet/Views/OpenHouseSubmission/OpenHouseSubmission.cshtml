@model OpenHouseViewModel
@{ ViewData["Title"] = "Submit Open Houses";}

@{AppUser user = await UserManager.GetUserAsync(User); string firstName = user.FirstName; var id = await UserManager.GetUserIdAsync(user); }
<div class="container mt-3">
    <h1>Submit an Open House</h1>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>MLS Number</label>
            <input type="number" class="form-control" asp-for="MLSNumber" />
            <span asp-validation-for="MLSNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Street</label>
            <input class="form-control" asp-for="Street" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>City</label>
            <input class="form-control" asp-for="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Day</label>
            <input class="form-control" asp-for="Day" />
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Time Open</label>
            <input class="form-control" asp-for="TimeOpen" />
            <span asp-validation-for="TimeOpen" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="AppUserId" value="@id" />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    @if (ViewBag.Count > 0)
    {<div class="alert alert-success">@ViewBag.Message</div>}
</div>

@section Scripts {
    @{ await Html.PartialAsync("_ValidationScriptsPartial"); }
}